@model BMOS.Models.RefundsInfoModel

@{
    Layout = "_ManagePage";
    ViewData["Title"] = "Details";
}

<h1>Chi tiết trả hàng</h1>

<div>
    
    <hr />
    <dl class="row" style="padding:0px 10px;">
        <dt class="col-sm-2">
            Tên người dùng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>     
        <dt class = "col-sm-2">
            Mã đơn hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt class="col-sm-2">
            Nội dung hoàn trả
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class = "col-sm-2">
            Thời gian
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsConfirm)
        </dt>
        <dd class="col-sm-10">
            @{
                if ((Model.IsConfirm) == true)
                {
                    <p style="color:green; border-radius: 25px; background-color: lightgreen; inline-size: 100%;text-align:center;">Đã phê duyệt </p>

                }
                if ((Model.IsConfirm) == null)
                {
                    <p style="color:white; border-radius: 25px; background-color: orange; inline-size: 100%;text-align:center;">Chờ xử lý</p>
                }
                if ((Model.IsConfirm) == false)
                {
                    <p style="color:black; border-radius: 25px; background-color: red; inline-size: 100%;text-align:center; ">Đã từ chối</p>
                }
            }
        </dd>
        <dt class="col-sm-12">
            Thông tin sản phẩm trong đơn hàng:
        </dt>
        <dd>
            @await Html.PartialAsync("Orderdetails")
        </dd>
        <dt class="col-sm-12">
            Ảnh phản hồi :
        </dt>
        <dd>
			<img width="200px" height="200px" src="@Model.urlImage" />
        </dd>
    </dl>
</div>
<div>
    <a style="text-decoration:none;color:darkorange" asp-action="Index">
        <button type="button" class="btn btn-warning">Trở lại</button>
    </a>
</div>
