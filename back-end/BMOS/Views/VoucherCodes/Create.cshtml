@model BMOS.Models.Entities.TblVoucherCode

@{
    Layout = "_ManagePage";
    ViewData["Title"] = "Create";
    var errorLengthCode = ViewData["errorLengthCode"];
    var errorCodeValue = ViewData["errorCodeValue"];
    var errorCodeQuantity = ViewData["errorCodeQuantity"];
}

<link href="~/css/create_edit.css" rel="stylesheet" />

<h1>Tạo blog</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div class="form-group">
                <label asp-for="VoucherCode" class="control-label"></label>
                @if(errorLengthCode != null)
                {
                    <span style="color: red">@errorLengthCode</span>
                }
                <input asp-for="VoucherCode" class="form-control" />
                <span asp-validation-for="VoucherCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                @if (errorCodeValue != null)
                {
                    <span style="color: red">@errorCodeValue</span>
                }
                <input asp-for="Value" class="form-control"/>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                @if (errorCodeQuantity != null)
                {
                    <span style="color: red">@errorCodeQuantity</span>
                }
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="VoucherManager">Trở lại</a>
</div>

@section Scripts {
    <script>
        CKEDITOR.replace('Description');
    </script>
    }