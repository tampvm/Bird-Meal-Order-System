@model BMOS.Models.Entities.TblBlog

@{
    Layout = "_ManagePage";
    ViewData["Title"] = "Blog Edit";
}

<script src="~/lib/ckeditor/ckeditor.js"></script>
<link href="~/css/create_edit.css" rel="stylesheet" />


<h1>Chỉnh sửa blog</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            
                <input asp-for="BlogId" type="hidden" class="form-control" readonly/>
                
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
                <input placeholder="dd-mm-yyyy" type="hidden" asp-for="Date" readonly class="form-control" />
               
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở Lại</a>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>
    }