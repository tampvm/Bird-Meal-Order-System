@model BMOS.Models.FeedbackInfo

@{
    Layout = "_ManagePage";
    ViewData["Title"] = "Delete";
}
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã đánh giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FeedbackId)
        </dd>
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Thông tin đánh giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
