
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/changepassword.css">
    <title>Thay đổi mật khẩu</title>
</head>
<body>
    <style>
        body {
            background: url('../images/background.png');
            background-size: cover;
            background-color: #f7ae54;
        }

        .emotion-div {
            width: 200px;
            height: 660px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #div {
            width: 30px;
            height: 30px;
            box-shadow: 0px 0px 7px 1px rgba(197, 123, 38, 0.822);
            position: relative;
            animation-name: move, reSize, bgColor;
            animation-duration: 10s;
            animation-iteration-count: infinite;
        }

        #div-1 {
            width: 60px;
            height: 60px;
            box-shadow: 0px 0px 7px 1px rgba(197, 123, 38, 0.822);
            position: relative;
            animation-name: move-1, reSize, bgColor;
            animation-duration: 22s;
            animation-iteration-count: infinite;
        }

        #div-2 {
            width: 50px;
            height: 50px;
            box-shadow: 0px 0px 7px 1px rgba(197, 123, 38, 0.822);
            position: relative;
            animation-name: move-2, reSize, bgColor;
            animation-duration: 4s;
            animation-iteration-count: infinite;
        }

        #div-3 {
            width: 70px;
            height: 70px;
            box-shadow: 0px 0px 7px 1px rgba(197, 123, 38, 0.822);
            position: relative;
            animation-name: move-3, reSize, bgColor;
            animation-duration: 16s;
            animation-iteration-count: infinite;
        }

        @@keyframes move {
            0% {
                top: -330px;
            }

            50% {
                top: 330px;
            }

            100% {
                top: 330px;
                top: -330px;
            }
        }

        @@keyframes move-1 {
            0% {
                top: 330px;
            }

            50% {
                top: -250px;
            }

            100% {
                top: -250px;
                top: 330px;
            }
        }

        @@keyframes move-2 {
            0% {
                top: -330px;
            }

            50% {
                top: 330px;
            }

            100% {
                top: 330px;
                top: -330px;
            }
        }

        @@keyframes move-3 {
            0% {
                top: 330px;
            }

            50% {
                top: -300px;
            }

            100% {
                top: -300px;
                top: 330px;
            }
        }

        @@keyframes reSize {
            from {
                width: 50px;
                height: 50px;
            }

            to {
                width: 100px;
                height: 100px;
            }
        }

        @@keyframes bgColor {
            from {
                background-color: rgb(201, 125, 50);
            }

            to {
                background-color: rgb(198, 123, 9);
            }
        }

        #form-changepassword {
            max-width: 490px;
            max-height: 720px;
            background-color: rgba(161, 89, 7, 0.3);
            border: 1px solid rgb(204, 105, 13);
            box-shadow: 0px 0px 7px 1px rgba(179, 99, 20, 0.822);
            border-radius: 20px;
            padding: 20px;
        }
    </style>

    <div id="wrapper">
        <div class="emotion-div">
            <div id="div"></div>
            <div id="div-2"></div>
        </div>

        <div id="form-changepassword">           
            <div class="changepassword">
                <form action="~/Account/ChangePassword" method="post">
                    <h2>Thay đổi mật khẩu</h2>                                   

                    <div class="form-group">
                        <label for="username"></label>
                        <input type="hidden" name="username" value="@ViewBag.User" class="input input--username" >
                    </div>

                    <div class="form-group" style="position: relative; display: flex; align-items: center; justify-content: center;">
                        <label for="password"></label>
                        <input type="password" name="password" value="" id="password" class="input input--password"
                            placeholder="Mật khẩu mới" required>
                        <div id="eye" style="position: absolute;right: 5%; cursor: pointer;">
                            <i class="fa-solid fa-eye-slash"></i>
                        </div>
                    </div>
                    <div class="form-group" style="position: relative; display: flex; align-items: center; justify-content: center;">
                        <label for="confirmPassword"></label>
                        <input type="password" name="confirmPassword" value="" id="confirm_password" class="input input--password"
                            placeholder="Nhập lại mật khẩu mới" required>
                        <div id="eyee" style="position: absolute;right: 5%; cursor: pointer;">
                            <i class="fa-solid fa-eye-slash"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" id="submit" class="btn btn-change"><b>Xác nhận</b></button>
                    </div>
                </form>
                <div class="others">
                    <div class="others-text">
                        <p>
                            Tạo tài khoản để quản lý đơn hàng, và các thông tin thanh toán, gửi hàng một cách đơn giản hơn.
                        </p>
                    </div>
                    <div class="others-button">
                        <a href="~/Account/Login" class="btn btn-name"><b>Đăng nhập</b></a>
                        <a href="~/Home/Index" class="btn btn-name"><b>Quay lại Trang Chủ</b></a>
                    </div>
                </div>               
            </div>
        </div>

        <div class="emotion-div">
            <div id="div-1"></div>
            <div id="div-3"></div>
        </div>
    </div>
    <script src="~/js/changepassword.js"></script>
    <script src="https://kit.fontawesome.com/6208ee92db.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script>
        $(document).ready(function () {
            $('#eye').click(function () {
                $(this).toggleClass('open');
                $(this).children('i').toggleClass('fa-eye fa-eye-slash');
                if ($(this).hasClass('open')) {
                    $(this).prev().attr('type', 'text');
                }
                else {
                    $(this).prev().attr('type', 'password');
                }
            });

            $('#eyee').click(function () {
                $(this).toggleClass('open');
                $(this).children('i').toggleClass('fa-eye fa-eye-slash');
                if ($(this).hasClass('open')) {
                    $(this).prev().attr('type', 'text');
                }
                else {
                    $(this).prev().attr('type', 'password');
                }
            });
        });
    </script>
</body>
</html>
