			.logo {
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: 1.5rem;
				font-weight: bold;
				text-transform: uppercase;
				letter-spacing: 2px;
				margin-bottom: 30px;
			}

				.logo i {
					margin-right: 10px;
				}

